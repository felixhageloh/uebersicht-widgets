.widget
  box-sizing: border-box
  display: inline-block
  font-size: 14px
  height: 292px
  padding-bottom: 40px
  padding: 16px
  position: relative
  vertical-align: top
  width: 292px
  word-spacing: normal
  overflow: hidden

  .screenshot
    height: 160px
    position: relative
    background: #fafafa
    overflow: hidden
    box-shadow: 0 0 0 1px rgba(#000, 0.25)
    border-radius: 1px
    box-sizing: border-box
    margin: 0 1px

    .image
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      background-size: 258px 160px
      background-repeat: no-repeat
      background-position: left center

    .image-shadow
      -webkit-filter: blur(10px)
      opacity: 0.4
      display: none

  h1
    font-size: 18px
    font-style: italic
    margin: 8px 0
    text-align: left
    font-weight: 500
    opacity: 0.7

  p
    margin: 8px 0

  .details, .details:link, .details:visited
    position: absolute
    top: 40px
    left: 16px
    right: 16px
    height: 160px
    text-decoration: none
    background: rgba(#fff, 0.5)
    color: text-color
    padding: 2px 12px 16px 12px
    opacity: 0
    pointer-events: none
    box-sizing: border-box

    &:after
      content: attr(title)
      position: absolute
      width: 100%
      text-align: center
      bottom: 2px
      left: 0
      font-size: 10px
      color: #999

    p
      vertical-align: top

  a.download
    display: block
    border-top: 1px solid #ddd
    font-size: 12px
    padding-top: 6px
    text-align: right

  .author
    font-size: 10px
    line-height: 24px
    position: relative

    em
      font-style: normal

  .info
    position: relative

  .download-count
    position: absolute
    right: 2px
    top: 0
    word-spacing: 0
    font-size: 11px
    line-height: 28px

    .icon
      display: inline-block
      font-size: 0
      height: 12px
      width: 12px
      image: 'images/arrow.png' 11px 12px
      background-repeat: no-repeat
      vertical-align: middle

  &:hover
    .details
      pointer-events: auto
      opacity: 1

    .screenshot
      box-shadow: 0 0 0 1px rgba(#000, 0.1)

      .image
        opacity: 0.9

